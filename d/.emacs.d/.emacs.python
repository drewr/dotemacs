; -*- emacs-lisp -*-

; Python
(add-to-list 'load-path (expand-file-name "~/elisp/python-mode"))
;(require 'python)
(require 'ipython)
(setq python-indent 4)

(defun py-mode-hook ()
  (set-variable 'show-trailing-whitespace 1)
  (show-paren-mode 1))
(add-hook 'python-mode-hook 'py-mode-hook)

(setq auto-mode-alist
      (cons '("\\.tac$" . python-mode) auto-mode-alist))
