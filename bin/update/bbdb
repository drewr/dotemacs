#!/bin/sh

PKG=bbdb
SRC=$HOME/src/$PKG
DEST=d/lisp/$PKG
EMACSD=$HOME/.emacs.d

die() {
  echo $1
  exit 1
}

if [[ $OS == "Darwin" ]]; then
  EMACS=/Applications/Emacs.app/Contents/MacOS/Emacs
else
  EMACS=emacs
fi

[ -d $SRC ] || die "$SRC not found"
[ -d $DEST ] && rm -rf $DEST
mkdir -p $DEST

( cd $SRC && find . -name \*.el | xargs tar cf - ) \
   | ( cd $DEST && tar xvf - )


